<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="FullscreenTheme">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="MyEditTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/signup_placeholder</item>
        <!--<item name="android:height">40dp</item>-->
    </style>

    <style name="mySmallEditTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="myBlackEditTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/post_item_back</item>
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="mySearchEditTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/home_search_back</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:height">@dimen/navigation_edit_search_height</item>
        <item name="android:textSize">@dimen/navigation_edit_search_font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lines">1</item>
    </style>

    <!-- Search bar layout -->
    <style name="SearchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="SearchLayout.Edit">
        <item name="android:autoText">false</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:background">@drawable/search_edit_selector</item>
        <!--<item name="android:hint">@string/search</item>-->
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/search_edit_search_font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@drawable/red_cursor</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--
    <style name="SearchLayout.ListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:listSelector">@drawable/search_list_view_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:divider">@color/search_list_divider_color</item>
    </style>
    -->

    <style name="SearchLayout.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector</item>
        <item name="android:shadowColor">@color/button_title_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <!-- Navigation bar Right button -->
    <style name="SearchLayout.Button.Right">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/search_cancel_button_text_size</item>
        <item name="android:textColor">@drawable/transparent_button_tint_color</item>
    </style>

</resources>
